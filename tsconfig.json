{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,           // Пропускаем проверку типов в зависимостях
    "noEmitOnError": false,         // Позволяем компиляцию даже при ошибках
    "strict": false,                // Отключаем строгую проверку
    "allowJs": true,                // Разрешаем компиляцию JS файлов
    "esModuleInterop": true         // Улучшаем поддержку ES модулей
  }
}
